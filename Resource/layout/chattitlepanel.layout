"resource/layout/chattitlepanel.layout"
{

	styles {
		MenuButton {
			minimum-height=30
			minimum-width=30
			render {
				0="fill( x0, y0, x1, y1, A2Background )"
				1="image( x0 + 5, y0 + 7, x1, y1, graphics/inactive/gear )"
			}
		}

		MenuButton:hover {
			render {
				0="fill( x0, y0, x1, y1, A2Background )"
				1="image( x0 + 5, y0 + 7, x1, y1, graphics/inactive/gear_hover )"
			}
		}

		statuslabel { }
	}

	layout {
		place { control="MenuButton" height=30 width=30 align=right }

		place {	control="LockImage,NameLabel,AvatarImage,StatusLabel" height=0 width=0 }
	}
}
